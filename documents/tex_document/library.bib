file = {:Users/manu/Library/Application Support/Mendeley Desktop/Downloaded/Erent, Drummond, Cross - 2012 - S. pombe Kinesins-8 Promote Both Nucleation and Catastrophe of Microtubules.pdf:pdf},
issn = {1932-6203},
journal = {PLoS ONE},
month = {feb},
number = {2},
pages = {e30738},
publisher = {Public Library of Science},
title = {{S. pombe Kinesins-8 Promote Both Nucleation and Catastrophe of Microtubules}},
