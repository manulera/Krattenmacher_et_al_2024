journal = {Epilepsia},
keywords = {EEG,cortical localization,epilepsy surgery,epileptogenic zone,intracranial electrodes},
number = {7},
pages = {1417--1426},
pmid = {32589284},
title = {{Interictal intracranial electroencephalography for predicting surgical success: The importance of space and time}},
