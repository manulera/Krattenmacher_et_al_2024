journal = {Current Biology},
month = {apr},
number = {7},
pages = {548--559},
publisher = {Cell Press},
title = {{The Microtubule Plus End-Tracking Proteins mal3p and tip1p Cooperate for Cell-End Targeting of Interphase Microtubules}},
url = {https://www.sciencedirect.com/science/article/pii/S0960982204002088?via{\%}3Dihub{\#}bBIB15},
volume = {14},
year = {2004}
