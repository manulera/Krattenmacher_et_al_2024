keywords = {Cholesterol,Cholesterol: metabolism,Humans,Jurkat Cells,Lymphocyte Activation,Membrane Lipids,Membrane Lipids: metabolism,T-Lymphocytes,T-Lymphocytes: immunology},
number = {6},
pages = {625--34},
pmid = {20153839},
publisher = {Elsevier B.V.},
title = {{Limited cholesterol depletion causes aggregation of plasma membrane lipid rafts inducing T cell activation.}},
