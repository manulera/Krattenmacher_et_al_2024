issn = {08909369},
journal = {Genes and Development},
keywords = {CLASP,CLIP170,Dynein,EB1,Fission yeast,S. Pombe},
number = {17},
pages = {2421--2436},
title = {{S. pombe CLASP needs dynein, not EB1 or CLIP170, to induce microtubule instability and slows polymerization rates at cell tips in a dynein-dependent manner}},
