author = {Walker, R. A. and O'Brien, E. T. and Pryer, N. K. and Soboeiro, M. F. and Voter, W. A. and Erickson, H. P. and Salmon, E. D.},
doi = {10.1083/jcb.107.4.1437},
issn = {00219525},
journal = {The Journal of cell biology},
pmid = {3170635},
title = {{Dynamic instability of individual microtubules analyzed by video light microscopy: rate constants and transition frequencies.}},
year = {1988}
}
